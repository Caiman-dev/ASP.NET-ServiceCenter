@model IEnumerable<ASP.NET_ServiceCenter.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <main role="main" class="pb-3">
        <br /><br />
        <h1>Categories</h1><br />

        @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
        {
            @Html.TextBox("search")
            <input type="submit" value="Search" />
        }

        <br /><br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cat_name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.cat_name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Create", "Categories") + "'");">Create</button>
    </main>
</div>